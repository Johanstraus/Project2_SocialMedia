<div class="container">
    <div class="row">
        <div class="col-small-4">
            <div class="card" style="width: 18rem;">
                {{!-- save image seperately, not in user sql db --}}
                <img src="{{image}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{user.firstname}} {{user.lastname}}</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        {{#each user.firstname}}
        <div>{{status.detail}}</div>
        {{/each}}
    </div>
</div>


